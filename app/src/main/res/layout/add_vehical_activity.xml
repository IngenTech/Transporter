<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/addVehical_BTN"
        android:scrollbars="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/mnd_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Name *"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="2dp"/>

            <EditText
                android:id="@+id/add_vehical_name"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/design_layouts"
                android:hint="Vehicle Name"
                android:inputType="text"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Registration No. *"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="7dp"/>

            <EditText
                android:id="@+id/add_vehical_regi_no"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/design_layouts"
                android:hint="Registration Number"
                android:inputType="text"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Registration Validity *"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="7dp"/>

            <EditText
                android:id="@+id/add_vehical_validity"
                android:layout_width="fill_parent"
                android:layout_height="45dp"

                android:background="@drawable/design_layouts"
                android:hint="Registration Validity"
                android:inputType="text"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Speed *"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="7dp"/>

            <EditText
                android:id="@+id/add_vehical_max_speed"
                android:layout_width="fill_parent"
                android:layout_height="45dp"

                android:background="@drawable/design_layouts"
                android:hint="Max Speed"
                android:inputType="numberDecimal"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Type *"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="7dp"/>

            <Spinner
                android:id="@+id/vehical_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/design_layouts"
                android:paddingLeft="5dp">

            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Category"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="7dp"/>
            <Spinner
                android:id="@+id/vehical_category"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/design_layouts"
                android:paddingLeft="5dp">

            </Spinner>

            <Button
                android:id="@+id/add_more_BTN"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background"
                android:text="Add More"
                android:visibility="gone"
                android:textColor="#fff" />


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/addmore_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/add_vehical_model_no"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/design_layouts"
                        android:paddingLeft="5dp" />

                    <EditText
                        android:id="@+id/add_vehical_purchage_year"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/design_layouts"
                        android:hint="Purchage Year"
                        android:inputType="number"
                        android:paddingLeft="10dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/add_vehical_insurance"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/design_layouts"
                        android:hint="Insurance"
                        android:inputType="text"
                        android:paddingLeft="10dp" />


                    <EditText
                        android:id="@+id/add_insurance_validity"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/design_layouts"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Validity Date"
                        android:inputType="number"
                        android:paddingLeft="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/add_vehical_pollution_no"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/design_layouts"
                        android:hint="Pollution No."
                        android:inputType="text"
                        android:paddingLeft="10dp" />

                    <EditText
                        android:id="@+id/add_pollution_validity"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/design_layouts"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Validity Date"
                        android:inputType="text"
                        android:paddingLeft="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/add_vehical_road_tax_no"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/design_layouts"
                        android:hint="Road Tax No."
                        android:inputType="text"
                        android:paddingLeft="10dp" />


                    <EditText
                        android:id="@+id/add_roadtax_validity"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/design_layouts"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Validity Date"
                        android:inputType="text"
                        android:paddingLeft="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/add_vehical_permit_type"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/design_layouts"
                        android:paddingLeft="5dp" />

                    <EditText
                        android:id="@+id/add_permit_validity"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/design_layouts"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Validity Date"
                        android:inputType="text"
                        android:paddingLeft="10dp" />

                </LinearLayout>

                <Spinner
                    android:id="@+id/add_vehical_permit_region"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/design_layouts"
                    android:paddingLeft="5dp">

                </Spinner>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/add_vehical_fitness_receipt_no"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/design_layouts"
                        android:hint="Fitness Receipt No."
                        android:inputType="text"
                        android:paddingLeft="10dp" />

                    <EditText
                        android:id="@+id/add_fitness_validity"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/design_layouts"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Validity Date"
                        android:inputType="text"
                        android:paddingLeft="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/add_vehical_other"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/design_layouts"
                        android:hint="Others"
                        android:inputType="text"
                        android:paddingLeft="10dp" />

                    <EditText
                        android:id="@+id/add_others_validity"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/design_layouts"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Validity Date"
                        android:inputType="text"
                        android:paddingLeft="10dp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/add_vehical_capacity"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/design_layouts"
                    android:hint="Capacity"
                    android:inputType="text"
                    android:paddingLeft="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/addvehical_checkBoxDoorClose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Door Close" />

                    <CheckBox
                        android:id="@+id/addvehical_checkBoxRefrigerated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Refrigerated" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/addVehical_BTN"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_background"
        android:text="Add Vehicle"
        android:textColor="#fff" />


</RelativeLayout>