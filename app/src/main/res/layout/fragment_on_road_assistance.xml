<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/location_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="weatherrisk.com.wrms.transporter.fragment.AddOnRoadAssistanceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">



        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map_view"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="400dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutBookingDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/bookingDate"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/design_layouts1"
                    android:hint="Date Of booking"
                    android:paddingLeft="5dp" />
                </android.support.design.widget.TextInputLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutContactNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/contactNo"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/design_layouts1"
                    android:hint="Contact No."
                    android:inputType="phone"
                    android:maxLength="10"
                    android:paddingLeft="5dp" />
                </android.support.design.widget.TextInputLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutLandmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/landmark"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/design_layouts1"
                    android:hint="Landmark"
                    android:paddingLeft="5dp" />
                </android.support.design.widget.TextInputLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutProblem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/problem"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/design_layouts1"
                    android:hint="Problem"
                    android:paddingLeft="5dp" />
                </android.support.design.widget.TextInputLayout>

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <Button
                    android:id="@+id/addOnRoadAssistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/button_background"
                    android:textColor="@android:color/white"
                    android:text="Add" />

                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />
            </LinearLayout>

    </LinearLayout>
</ScrollView>