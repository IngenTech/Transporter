<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:activity="com.iembsys.admin.nimbumirchi.customer.CustomerConfirmOrderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add_trip_btn">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null" />

        <TextView
            android:visibility="gone"
            android:id="@+id/no_confrm_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="You don't have any confirm order."
            android:textSize="20dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/add_trip_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/order_btn_bg"
        android:textColor="@color/White"
        android:text="Add Trip"
        android:gravity="center"/>
    </RelativeLayout>

</FrameLayout>
