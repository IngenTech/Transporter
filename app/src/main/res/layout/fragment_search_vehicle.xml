<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="weatherrisk.com.wrms.transporter.fragment.SearchVehicleFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/layout_background"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="FROM LOCATION"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="5dp"
                        android:text="State"
                        android:textColor="@color/colorPrimaryDark" />

                    <Spinner
                        android:id="@+id/fromStateSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/design_layouts1"
                        android:paddingLeft="5dp"
                        android:transitionGroup="false" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="5dp"
                        android:text="City"
                        android:textColor="@color/colorPrimaryDark" />

                    <Spinner
                        android:id="@+id/fromCitySpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/design_layouts1"
                        android:paddingLeft="5dp"
                        android:transitionGroup="false" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/layout_background"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TO LOCATION"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="5dp"
                        android:text="State"
                        android:textColor="@color/colorPrimaryDark" />

                    <Spinner
                        android:id="@+id/toStateSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/design_layouts1"
                        android:paddingLeft="5dp"
                        android:transitionGroup="false" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="5dp"
                        android:text="City"
                        android:textColor="@color/colorPrimaryDark" />

                    <Spinner
                        android:id="@+id/toCitySpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/design_layouts1"
                        android:paddingLeft="5dp"
                        android:transitionGroup="false" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/layout_background"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtTxtDate"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/design_layouts1"
                    android:hint="Date"
                    android:focusable="false"
                    android:paddingLeft="5dp" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:text="Select Category"
                android:textColor="@color/colorPrimaryDark" />

            <Spinner
                android:id="@+id/selectCategory"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/design_layouts1"
                android:paddingLeft="5dp"
                android:transitionGroup="false" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutArrivalDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtTxtItem"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/design_layouts1"
                    android:hint="Item"
                    android:paddingLeft="5dp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutDriverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtTxtCapacity"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/design_layouts1"
                    android:hint="Capacity (tones)"
                    android:inputType="number"
                    android:paddingLeft="5dp" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:text="Preference"
                android:textColor="@color/colorPrimaryDark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBoxDoorClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Door Close" />

                <CheckBox
                    android:id="@+id/checkBoxRefrigerated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Refrigerated" />

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutDriverMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtTxtNoOfVehicles"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/design_layouts1"
                    android:hint="No of Vehicles"
                    android:inputType="number"
                    android:paddingLeft="5dp" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnSearchTransporter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="Search Transporter"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

