<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="weatherrisk.com.wrms.transporter.fragment.AddOrderFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/layout_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="FROM LOCATION"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutFromCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/fromCity"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/design_layouts1"
                    android:hint="From City State" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutFromAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/fromAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/design_layouts1"
                    android:hint="From Address" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/layout_background"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TO LOCATION"
                android:textStyle="bold" />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutToCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/toCity"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/design_layouts1"
                    android:hint="To City State" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutToAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/toAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/design_layouts1"
                    android:hint="To Address" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/layout_background"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/transporterName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/design_layouts1"
                    android:paddingLeft="10dp"
                    android:hint="Transporter Name" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutDispatchDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/dispatchDate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableRight="@drawable/ic_action_cal"
                    android:focusable="false"
                    android:background="@drawable/design_layouts1"
                    android:paddingLeft="10dp"
                    android:hint="Dispatch Date" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutArrivalDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/materialTypeName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/design_layouts1"
                    android:paddingLeft="10dp"
                    android:hint="Material Type Name" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutDriverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/item"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/design_layouts1"
                    android:paddingLeft="10dp"
                    android:hint="Item" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutDriverMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/doorStatusRefrigerated"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="DoorStatus/Refrigerated"
                    android:paddingLeft="10dp"
                    android:background="@drawable/design_layouts1"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/addInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Invoice"
            android:textColor="@color/colorPrimaryDark"
            android:padding="10dp"
            android:layout_gravity="right"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:id="@+id/confirmInvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical" />


        <LinearLayout
            android:id="@+id/addInvoiceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/layout_background"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:visibility="gone"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/invoiceInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You can add Up to 5 Invoices"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputLayoutInvoiceAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/invoiceAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Invoice Amount"
                            android:inputType="numberDecimal"
                            android:paddingLeft="10dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputLayoutInvoiceNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/invoiceNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Invoice Number"
                            android:inputType="number"
                            android:paddingLeft="10dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputLayoutInvoiceDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/invoiceDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic_action_cal"
                            android:focusable="false"
                            android:hint="Invoice Date"
                            android:paddingLeft="10dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputLayoutInvoiceRemark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Remark"
                            android:paddingLeft="10dp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/uploadInvoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_background"
                        android:src="@drawable/ic_gallery" />

                    <ImageView
                        android:id="@+id/invoiceView"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />

                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/button_background"
                android:text="Upload"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <Button
            android:id="@+id/addRoadPermit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Road Permit"
            android:textColor="@color/colorPrimaryDark"
            android:padding="10dp"
            android:layout_gravity="right"
            android:background="@android:color/transparent"/>


        <LinearLayout
            android:id="@+id/confirmRoadPermit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical" />


        <LinearLayout
            android:id="@+id/roadPermitLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/layout_background"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:visibility="gone"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/roadPermitInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You can add Up to 2 Road Permits"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputLayoutRoadPermitRemark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/roadPermitRemark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Road Permit Remark"
                            android:paddingLeft="10dp" />
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/uploadRoadPermit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_background"
                        android:text="Upload"
                        android:textColor="@android:color/white" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/uploadRoadPermitImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/button_background"
                        android:src="@drawable/ic_gallery" />

                    <ImageView
                        android:id="@+id/roadPermitView"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />

                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/materialContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/layout_background"
            android:orientation="vertical"
            android:paddingLeft="5dp" />

        <!--<Button
            android:id="@+id/addMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Material" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/layout_background"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/materialType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


                <Spinner
                    android:id="@+id/invoiceId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutMaterialRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/materialRemark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Material Remark" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutMaterialAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/materialAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Material Amount"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/addMaterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/button_background"
                android:text="Add Material"
                android:textColor="@android:color/white" />


        </LinearLayout>

        <Button
            android:id="@+id/submitOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="UPLOAD ORDER"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>


</ScrollView>
