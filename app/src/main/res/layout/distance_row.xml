<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        card_view:cardCornerRadius="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.iembsys.admin.nimbumirchi.customer.util.RobotoTextView
                android:id="@+id/distance_im"
                style="@style/TextViewAppearance.ThinLight"
                android:textAllCaps="true"
                android:layout_centerVertical="true"
                android:text="Vehical IMEI:" />

            <com.iembsys.admin.nimbumirchi.customer.util.RobotoTextView
                android:id="@+id/distance_imei"
                style="@style/TextViewAppearance.MediumCondensed"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="end"
                android:text="UP-78 BR4022"
                 />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <com.iembsys.admin.nimbumirchi.customer.util.RobotoTextView
                android:id="@+id/distance_vn"
                style="@style/TextViewAppearance.ThinLight"
                android:textAllCaps="true"
                android:text="Vehical Name:" />

            <com.iembsys.admin.nimbumirchi.customer.util.RobotoTextView
                android:id="@+id/distance_vehicalName"
                style="@style/TextViewAppearance.ThinLight"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="end"
                android:text="Narayan Transport" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <com.iembsys.admin.nimbumirchi.customer.util.RobotoTextView
                android:id="@+id/distance_d"
                style="@style/TextViewAppearance.ThinLight"
                android:textAllCaps="true"
                android:text="Date From:" />

            <com.iembsys.admin.nimbumirchi.customer.util.RobotoTextView
                android:id="@+id/distance_date_from"
                style="@style/TextViewAppearance.ThinLight"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="end"
                android:text="ss" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <com.iembsys.admin.nimbumirchi.customer.util.RobotoTextView
                android:id="@+id/distance_dd"
                style="@style/TextViewAppearance.ThinLight"
                android:textAllCaps="true"
                android:text="Date To:" />

            <com.iembsys.admin.nimbumirchi.customer.util.RobotoTextView
                android:id="@+id/distance_date_to"
                style="@style/TextViewAppearance.ThinLight"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="end"
                android:text="ff" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <com.iembsys.admin.nimbumirchi.customer.util.RobotoTextView
                android:id="@+id/distance_dist"
                style="@style/TextViewAppearance.ThinLight"
                android:text="Distance:"
                android:textAllCaps="true"/>

        <com.iembsys.admin.nimbumirchi.customer.util.RobotoTextView
            android:id="@+id/distance_distance"
            style="@style/TextViewAppearance.ThinLight"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:text="5" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/blue_gray" />
    </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>