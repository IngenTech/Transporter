<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="weatherrisk.com.wrms.transporter.AddTripActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/layout_background"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="FROM LOCATION"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_margin="5dp"
                        android:text="State *" />

                    <Spinner
                        android:id="@+id/fromState"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/design_layouts1"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_margin="5dp"
                        android:text="City *" />

                    <Spinner
                        android:id="@+id/fromCity"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/design_layouts1"
                        android:layout_weight="1" />
                </LinearLayout>


            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutFromAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/fromAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/design_layouts1"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:hint="From Address *" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/layout_background"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TO LOCATION"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/colorAccent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="State *" />

                    <Spinner
                        android:id="@+id/toState"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/design_layouts1"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/colorAccent"
                        android:layout_margin="5dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="City *" />

                    <Spinner
                        android:id="@+id/toCity"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/design_layouts1"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutToAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/toAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/design_layouts1"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:hint="To Address *" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/layout_background"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:textColor="@color/colorAccent"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Name *" />
            <EditText

                android:id="@+id/customerName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:background="@drawable/design_layouts1"
                android:hint="Customer Name" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_margin="5dp"
                android:text="Dispatch Date *" />

            <EditText
                android:id="@+id/dispatchDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:background="@drawable/design_layouts1"
                android:drawableRight="@drawable/ic_action_cal"
                android:focusable="false"
                android:hint="Dispatch Date" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_margin="5dp"
                android:text="Arrival Date *" />

            <EditText
                android:id="@+id/arrivalDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:background="@drawable/design_layouts1"
                android:drawableRight="@drawable/ic_action_cal"
                android:focusable="false"
                android:hint="Arrival Date" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_margin="5dp"
                android:text="Driver Name" />

            <EditText
                android:id="@+id/driverName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:background="@drawable/design_layouts1"
                android:hint="Driver Name" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_margin="5dp"
                android:text="Driver Mobile No" />


            <EditText
                android:id="@+id/driverMobile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:background="@drawable/design_layouts1"
                android:hint="Driver Mobile No."
                android:maxLength="10"
                android:inputType="phone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/confirmInvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical" />







        <LinearLayout
            android:id="@+id/materialContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/layout_background"
            android:orientation="vertical"
            android:paddingLeft="5dp" />

        <!--<Button
            android:id="@+id/addMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Material" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/layout_background"
            android:orientation="vertical"
            android:paddingLeft="5dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:text="Material"
                    android:textColor="@color/colorAccent"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


                <TextView
                    android:text="Invoice Id"
                    android:textColor="@color/colorAccent"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/materialType"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/design_layouts1"
                    android:layout_weight="1" />


                <Spinner
                    android:id="@+id/invoiceId"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/design_layouts1"
                    android:layout_weight="1" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutMaterialRemark"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/materialRemark"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/design_layouts1"
                    android:hint="Material Remark" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutMaterialAmount"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/materialAmount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/design_layouts1"
                    android:inputType="number"
                    android:hint="Material Amount" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/addMaterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_background"
                android:text="Add Material"
                android:textColor="@android:color/white" />


        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutOrderRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/tripRemark"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/design_layouts1"
                android:hint="Trip Remark" />
        </android.support.design.widget.TextInputLayout>



        <Button
            android:id="@+id/submitTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="UPLOAD TRIP"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>


</ScrollView>

