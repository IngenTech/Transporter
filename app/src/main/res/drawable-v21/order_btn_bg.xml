<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/orderbtn_color" />
            <stroke
                android:width="1dp"
                android:color="@color/White" />
            <!--<corners
                android:radius="7dp" />-->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/orderbtn_color"
                android:endColor="@color/orderbtn_color"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/White"
                />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>